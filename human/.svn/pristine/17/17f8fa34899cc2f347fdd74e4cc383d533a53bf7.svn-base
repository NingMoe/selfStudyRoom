@charset "utf-8";
@font-face {
  font-family: pingfang;
  src: url('PingFang Regular.ttf');
}
* {
  border: none;
  margin: 0;
  padding: 0;
  font-family: 'pingfang';
  font-size: 0.25rem;
  color: #8c8c8c;
}
input {
  -webkit-appearance: none;
  outline: none;
}
.main {
  margin-top: 15%;
}
.main div {
  margin: 5% ;
  line-height: 5%;
  width: 80% !important;
  margin-left: 8%;
}
.main div input {
  width: 100% !important;
  line-height:0.8rem;
  border:1px solid #cccccc;
  border-raidus:3px !important;
}
.main p {
  margin-left: 10%;
  margin-top: -5%;
}
.bottom {
  position: fixed;
  bottom: 5%;
  width: 95% !important;
  margin-left: 2.5%;
}
.bottom input {
  width: 80% !important;
  height: 1rem;
  color: #ffffff;
}
.bottom .button-red {
  background: #0db09b;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  margin-left: 8%;
}
